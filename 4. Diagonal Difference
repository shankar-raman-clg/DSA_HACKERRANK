#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int diagonalDifference(int arr_rows, int arr_columns, int** arr) {
    int leftSum = 0;
    int rightSum = 0;
    int n = arr_rows; 

    for (int i = 0; i < n; i++) {
        leftSum += arr[i][i];            // Primary Diagonal
        rightSum += arr[i][n - 1 - i];   // Secondary Diagonal
    }
    return abs(leftSum - rightSum);
}
