#include <stdio.h>
#include <stdlib.h>

int birthdayCakeCandles(int candles_count, int* candles) {
    int maxHeight = 0;
    int count = 0;
    
    for (int i = 0; i < candles_count; i++) {
        if (candles[i] > maxHeight) {
            maxHeight = candles[i];
            count = 1;
        } else if (candles[i] == maxHeight) {
            count++;
        }
    }
    return count;
}
